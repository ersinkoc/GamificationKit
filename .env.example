# GamificationKit Environment Variables
# Copy this file to .env and fill in your actual values

# ================================
# Application Configuration
# ================================
NODE_ENV=production
APP_NAME=gamification-kit
LOG_LEVEL=info

# ================================
# API Server Configuration
# ================================
API_ENABLED=true
API_PORT=3001
API_HOST=0.0.0.0
API_PREFIX=/gamification

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# Security Configuration
# ================================
# API Key for authentication (generate with: openssl rand -hex 32)
API_KEY=your-secret-api-key-here

# Admin API Keys (comma-separated, generate with: openssl rand -hex 32)
ADMIN_API_KEYS=admin-key-1,admin-key-2

# Enable encryption for sensitive data
ENCRYPTION_ENABLED=true
ENCRYPTION_KEY=your-encryption-key-here

# Trust proxy headers (set to true if behind nginx, load balancer, etc.)
TRUST_PROXY=false

# ================================
# Storage Configuration
# ================================
STORAGE_TYPE=redis

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=gamification
MONGODB_USERNAME=
MONGODB_PASSWORD=

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=gamification
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=
POSTGRES_SSL=false

# ================================
# WebSocket Configuration
# ================================
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=3002
WEBSOCKET_PATH=/ws

# ================================
# Webhook Configuration
# ================================
WEBHOOKS_ENABLED=true
WEBHOOKS_TIMEOUT=5000
WEBHOOKS_RETRIES=3
WEBHOOKS_SECRET=your-webhook-secret-here

# ================================
# Metrics & Monitoring
# ================================
METRICS_ENABLED=true
METRICS_INTERVAL=60000

# Prometheus
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# ================================
# External Services (Optional)
# ================================

# Sentry Error Tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# OpenTelemetry Tracing
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=gamification-kit

# ================================
# Secret Management (Optional)
# ================================
# Use vault for secret management
VAULT_ENABLED=false
VAULT_URL=http://localhost:8200
VAULT_TOKEN=
VAULT_SECRET_PATH=secret/gamification

# AWS Secrets Manager
AWS_SECRETS_ENABLED=false
AWS_REGION=us-east-1
AWS_SECRET_NAME=gamification-kit-secrets

# Azure Key Vault
AZURE_KEYVAULT_ENABLED=false
AZURE_KEYVAULT_URL=https://your-vault.vault.azure.net/

# ================================
# Backup Configuration
# ================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 0 * * *
BACKUP_STORAGE_TYPE=s3

# S3 Backup
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=us-east-1
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=

# ================================
# Development/Debug
# ================================
DEBUG=false
VERBOSE_LOGGING=false
