{
  "name": "gamification-kit",
  "version": "1.0.0",
  "description": "A comprehensive, production-ready gamification kit for Node.js applications",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:ci": "NODE_OPTIONS='--experimental-vm-modules' jest --ci --coverage --maxWorkers=2",
    "lint": "eslint src/**/*.js",
    "build:widget": "webpack --config webpack.widget.config.js",
    "dev": "nodemon index.js"
  },
  "keywords": [
    "gamification",
    "points",
    "badges",
    "achievements",
    "leaderboard",
    "levels",
    "nodejs",
    "framework-agnostic"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "optionalDependencies": {
    "redis": "^4.6.11",
    "mongodb": "^6.3.0",
    "pg": "^8.11.3",
    "express": "^4.18.2",
    "fastify": "^4.25.1",
    "koa": "^2.14.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}